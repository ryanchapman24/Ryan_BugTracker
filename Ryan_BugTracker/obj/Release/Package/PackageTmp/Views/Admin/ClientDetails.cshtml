@model Ryan_BugTracker.Models.Client

@{
    ViewBag.Title = "Details";
}

<h2>Client Details</h2>
<hr />
<h4 style="color: #29AAE3">@Html.DisplayFor(model => model.Name)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Is this Client active?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditClient", new { id = Model.Id }) |
    @Html.ActionLink("Back to Administrator Panel", "Index")
</p>
