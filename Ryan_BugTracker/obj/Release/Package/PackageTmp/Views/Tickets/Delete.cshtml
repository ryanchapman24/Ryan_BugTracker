@model Ryan_BugTracker.Models.Ticket

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Ticket</h2>
<hr />
<h4 style="color: #29AAE3"><strong style="color: #031B25; font-size: 13px">PROJECT: </strong>@Html.DisplayFor(model => model.Project.Title)</h4>
<hr />

<div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Are you sure you want to delete this? <input type="submit" value="Yes" class="btn btn-default" style="margin-left: 20px"/></h3><br />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Created)<br /><br />
        </dt>

        <dd>
            @Model.Created.ToString("g")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Updated)<br /><br />
        </dt>

        <dd>
            @if (Model.Updated.HasValue)
            {
                @Model.Updated.Value.ToString("g")
            }
        </dd>

        <dt>
            Ticket Name<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Description<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            Author<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.AuthorUserId)
        </dd>

        <dt>
            Project<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Title)
        </dd>

        <dt>
            Type<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketType.Name)
        </dd>

        <dt>
            Priority<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketPriority.Name)
        </dd>

        <dt>
            Assignment<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssignedToUser.DisplayName)
        </dd>

        <dt>
            Status<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketStatus.Name)
        </dd>
    </dl>
    <div>
        @*@Html.ActionLink("Go Back", "Index", "Home")*@
        <a href="javascript:history.go(-1)" class="btn btn-custom-primary" style="background-color: #031B25; border-color: #000000"><i class="fa fa-arrow-left"></i> Go Back</a>
    </div>
}
</div>
