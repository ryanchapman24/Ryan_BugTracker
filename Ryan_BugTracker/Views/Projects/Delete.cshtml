@model Ryan_BugTracker.Models.Project

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Project</h2>
<hr />
<h4 style="color: #29AAE3">@Html.DisplayFor(model => model.Title)</h4>
<hr />

<div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Are you sure you want to delete this? <input type="submit" value="Yes" class="btn btn-default" style="margin-left: 20px"/></h3><br />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Created)<br /><br />
        </dt>

        <dd>
            @Model.Created.ToString("g")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Updated)<br /><br />
        </dt>

        <dd>
        @if (Model.Updated.HasValue)
        {
            @Model.Updated.Value.ToString("g")
        }
        </dd>

        <dt>
            Client<br /><br />
        </dt>

        <dd>
            @Model.Client.Name
        </dd>

        <dt>
            Name<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Description<br /><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>

    <div>
        @Html.ActionLink("Back to List", "ProjectList")
    </div>
}
</div>
