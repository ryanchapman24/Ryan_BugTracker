@model Ryan_BugTracker.Models.Client

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Client</h2>
<hr />
<h4 style="color: #29AAE3">@Html.DisplayFor(model => model.Name)</h4>
<hr />
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <h3>Are you sure you want to delete this? <input type="submit" value="Yes" class="btn btn-default" style="margin-left: 20px" /></h3><br />
        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Is this Client active?
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>
    }
    <div>
        @Html.ActionLink("Back to Administrator Panel", "Index")
    </div>
</div>
