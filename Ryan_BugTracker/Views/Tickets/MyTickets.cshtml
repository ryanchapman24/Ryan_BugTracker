}
@{
    ViewBag.Title = "MyTickets";

    ApplicationDbContext db = new ApplicationDbContext();
    var uId = User.Identity.GetUserId();
    ApplicationUser loggedUser = new ApplicationUser();
    loggedUser = db.Users.Find(uId);
